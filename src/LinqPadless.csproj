<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Title>LinqPadless</Title>
    <OutputType>Exe</OutputType>
    <VersionPrefix>2.0.0</VersionPrefix>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <LangVersion>7.1</LangVersion>
    <AssemblyName>lpless</AssemblyName>
    <Summary>LINQPad Queries without LINQPad</Summary>
    <Description>LINQPadless is a tool for compiling LINQPad query files into stand-alone C# scripts (csx) or executable binaries (exe) so that they can be run outside and independent of LINQPad.</Description>
    <Product>LinqPadless</Product>
    <Copyright>Copyright 2016 Atif Aziz. All rights reserved.</Copyright>
    <Authors>Atif Aziz</Authors>
    <Owners>Atif Aziz</Owners>
    <PackageProjectUrl>https://github.com/linqpadless/LinqPadless</PackageProjectUrl>
    <GenerateAssemblyTitleAttribute>false</GenerateAssemblyTitleAttribute>
    <PackageOutputPath>..\dist</PackageOutputPath>
    <IsTool>true</IsTool>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\bin\Debug\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\bin\Release\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="dotnet.cmd" />
    <None Remove="dotnet.sh" />
    <None Remove="help.txt" />
    <None Remove="lpless.cmd" />
    <None Remove="lpless.sh" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\COPYING.txt" Link="COPYING.txt">
      <PackagePath />
    </Content>
    <Content Include="lpless.cmd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="lpless.sh">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="help.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Choices" Version="1.0.1" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="2.7.0" />
    <PackageReference Include="morelinq" Version="3.0.0" />
    <PackageReference Include="NuGet.Versioning" Version="4.8.0" />
    <PackageReference Include="System.Interactive" Version="3.2.0" />
  </ItemGroup>

</Project>
